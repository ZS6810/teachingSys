<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teach.teachingsys.mapper.QuestionbankMapper">
    
    <resultMap type="Questionbank" id="QuestionbankResult">
        <result property="id"    column="id"    />
        <result property="questionType"    column="question_type"    />
        <result property="questionText"    column="question_text"    />
        <result property="difficulty"    column="difficulty"    />
        <result property="score"    column="score"    />
        <result property="explanation"    column="explanation"    />
        <result property="tags"    column="tags"    />
        <result property="createdTime"    column="created_time"    />
        <result property="updatedTime"    column="updated_time"    />
    </resultMap>

    <sql id="selectQuestionbankVo">
        select id, question_type, question_text, difficulty, score, explanation, tags, created_time, updated_time from questionbank
    </sql>

    <select id="selectQuestionbankList" parameterType="Questionbank" resultMap="QuestionbankResult">
        <include refid="selectQuestionbankVo"/>
        <where>  
            <if test="questionType != null  and questionType != ''"> and question_type = #{questionType}</if>
            <if test="questionText != null  and questionText != ''"> and question_text = #{questionText}</if>
            <if test="difficulty != null  and difficulty != ''"> and difficulty = #{difficulty}</if>
            <if test="score != null "> and score = #{score}</if>
            <if test="explanation != null  and explanation != ''"> and explanation = #{explanation}</if>
            <if test="tags != null  and tags != ''"> and tags = #{tags}</if>
            <if test="createdTime != null "> and created_time = #{createdTime}</if>
            <if test="updatedTime != null "> and updated_time = #{updatedTime}</if>
        </where>
    </select>
    
    <select id="selectQuestionbankById" parameterType="Long" resultMap="QuestionbankResult">
        <include refid="selectQuestionbankVo"/>
        where id = #{id}
    </select>

    <insert id="insertQuestionbank" parameterType="Questionbank" useGeneratedKeys="true" keyProperty="id">
        insert into questionbank
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="questionType != null and questionType != ''">question_type,</if>
            <if test="questionText != null and questionText != ''">question_text,</if>
            <if test="difficulty != null">difficulty,</if>
            <if test="score != null">score,</if>
            <if test="explanation != null">explanation,</if>
            <if test="tags != null">tags,</if>
            <if test="createdTime != null">created_time,</if>
            <if test="updatedTime != null">updated_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="questionType != null and questionType != ''">#{questionType},</if>
            <if test="questionText != null and questionText != ''">#{questionText},</if>
            <if test="difficulty != null">#{difficulty},</if>
            <if test="score != null">#{score},</if>
            <if test="explanation != null">#{explanation},</if>
            <if test="tags != null">#{tags},</if>
            <if test="createdTime != null">#{createdTime},</if>
            <if test="updatedTime != null">#{updatedTime},</if>
         </trim>
    </insert>

    <update id="updateQuestionbank" parameterType="Questionbank">
        update questionbank
        <trim prefix="SET" suffixOverrides=",">
            <if test="questionType != null and questionType != ''">question_type = #{questionType},</if>
            <if test="questionText != null and questionText != ''">question_text = #{questionText},</if>
            <if test="difficulty != null">difficulty = #{difficulty},</if>
            <if test="score != null">score = #{score},</if>
            <if test="explanation != null">explanation = #{explanation},</if>
            <if test="tags != null">tags = #{tags},</if>
            <if test="createdTime != null">created_time = #{createdTime},</if>
            <if test="updatedTime != null">updated_time = #{updatedTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteQuestionbankById" parameterType="Long">
        delete from questionbank where id = #{id}
    </delete>

    <delete id="deleteQuestionbankByIds" parameterType="String">
        delete from questionbank where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>