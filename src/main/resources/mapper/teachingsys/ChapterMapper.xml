<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teach.teachingsys.mapper.ChapterMapper">
    
    <resultMap type="Chapter" id="ChapterResult">
        <result property="id"    column="id"    />
        <result property="courseId"    column="course_id"    />
        <result property="chapterName"    column="chapter_name"    />
        <result property="chapterOrder"    column="chapter_order"    />
        <result property="description"    column="description"    />
        <result property="parentId"    column="parent_id"    />
        <result property="isPublic"    column="is_public"    />
        <result property="createdTime"    column="created_time"    />
        <result property="updatedTime"    column="updated_time"    />
    </resultMap>

    <sql id="selectChapterVo">
        select id, course_id, chapter_name, chapter_order, description, parent_id, is_public, created_time, updated_time from chapter
    </sql>

    <select id="selectChapterList" parameterType="Chapter" resultMap="ChapterResult">
        <include refid="selectChapterVo"/>
        <where>  
            <if test="courseId != null "> and course_id = #{courseId}</if>
            <if test="chapterName != null  and chapterName != ''"> and chapter_name like concat('%', #{chapterName}, '%')</if>
            <if test="chapterOrder != null "> and chapter_order = #{chapterOrder}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="parentId != null "> and parent_id = #{parentId}</if>
            <if test="isPublic != null "> and is_public = #{isPublic}</if>
            <if test="createdTime != null "> and created_time = #{createdTime}</if>
            <if test="updatedTime != null "> and updated_time = #{updatedTime}</if>
        </where>
    </select>
    
    <select id="selectChapterById" parameterType="Long" resultMap="ChapterResult">
        <include refid="selectChapterVo"/>
        where id = #{id}
    </select>

    <insert id="insertChapter" parameterType="Chapter" useGeneratedKeys="true" keyProperty="id">
        insert into chapter
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="courseId != null">course_id,</if>
            <if test="chapterName != null and chapterName != ''">chapter_name,</if>
            <if test="chapterOrder != null">chapter_order,</if>
            <if test="description != null">description,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="isPublic != null">is_public,</if>
            <if test="createdTime != null">created_time,</if>
            <if test="updatedTime != null">updated_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="courseId != null">#{courseId},</if>
            <if test="chapterName != null and chapterName != ''">#{chapterName},</if>
            <if test="chapterOrder != null">#{chapterOrder},</if>
            <if test="description != null">#{description},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="isPublic != null">#{isPublic},</if>
            <if test="createdTime != null">#{createdTime},</if>
            <if test="updatedTime != null">#{updatedTime},</if>
         </trim>
    </insert>

    <update id="updateChapter" parameterType="Chapter">
        update chapter
        <trim prefix="SET" suffixOverrides=",">
            <if test="courseId != null">course_id = #{courseId},</if>
            <if test="chapterName != null and chapterName != ''">chapter_name = #{chapterName},</if>
            <if test="chapterOrder != null">chapter_order = #{chapterOrder},</if>
            <if test="description != null">description = #{description},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="isPublic != null">is_public = #{isPublic},</if>
            <if test="createdTime != null">created_time = #{createdTime},</if>
            <if test="updatedTime != null">updated_time = #{updatedTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteChapterById" parameterType="Long">
        delete from chapter where id = #{id}
    </delete>

    <delete id="deleteChapterByIds" parameterType="String">
        delete from chapter where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>