<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teach.teachingsys.mapper.AssignmentBankMapper">
    
    <resultMap type="AssignmentBank" id="AssignmentBankResult">
        <result property="id"    column="id"    />
        <result property="assignmentId"    column="assignment_id"    />
        <result property="questionId"    column="question_id"    />
        <result property="questionOrder"    column="question_order"    />
    </resultMap>

    <sql id="selectAssignmentBankVo">
        select id, assignment_id, question_id, question_order from assignment_bank
    </sql>

    <select id="selectAssignmentBankList" parameterType="AssignmentBank" resultMap="AssignmentBankResult">
        <include refid="selectAssignmentBankVo"/>
        <where>  
            <if test="assignmentId != null "> and assignment_id = #{assignmentId}</if>
            <if test="questionId != null "> and question_id = #{questionId}</if>
            <if test="questionOrder != null "> and question_order = #{questionOrder}</if>
        </where>
    </select>
    
    <select id="selectAssignmentBankById" parameterType="Long" resultMap="AssignmentBankResult">
        <include refid="selectAssignmentBankVo"/>
        where id = #{id}
    </select>

    <insert id="insertAssignmentBank" parameterType="AssignmentBank" useGeneratedKeys="true" keyProperty="id">
        insert into assignment_bank
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="assignmentId != null">assignment_id,</if>
            <if test="questionId != null">question_id,</if>
            <if test="questionOrder != null">question_order,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="assignmentId != null">#{assignmentId},</if>
            <if test="questionId != null">#{questionId},</if>
            <if test="questionOrder != null">#{questionOrder},</if>
         </trim>
    </insert>

    <update id="updateAssignmentBank" parameterType="AssignmentBank">
        update assignment_bank
        <trim prefix="SET" suffixOverrides=",">
            <if test="assignmentId != null">assignment_id = #{assignmentId},</if>
            <if test="questionId != null">question_id = #{questionId},</if>
            <if test="questionOrder != null">question_order = #{questionOrder},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAssignmentBankById" parameterType="Long">
        delete from assignment_bank where id = #{id}
    </delete>

    <delete id="deleteAssignmentBankByIds" parameterType="String">
        delete from assignment_bank where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>