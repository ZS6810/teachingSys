<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teach.teachingsys.mapper.ExamBankMapper">
    
    <resultMap type="ExamBank" id="ExamBankResult">
        <result property="id"    column="id"    />
        <result property="examId"    column="exam_id"    />
        <result property="questionId"    column="question_id"    />
        <result property="questionOrder"    column="question_order"    />
    </resultMap>

    <sql id="selectExamBankVo">
        select id, exam_id, question_id, question_order from exam_bank
    </sql>

    <select id="selectExamBankList" parameterType="ExamBank" resultMap="ExamBankResult">
        <include refid="selectExamBankVo"/>
        <where>  
            <if test="examId != null "> and exam_id = #{examId}</if>
            <if test="questionId != null "> and question_id = #{questionId}</if>
            <if test="questionOrder != null "> and question_order = #{questionOrder}</if>
        </where>
    </select>
    
    <select id="selectExamBankById" parameterType="Long" resultMap="ExamBankResult">
        <include refid="selectExamBankVo"/>
        where id = #{id}
    </select>

    <insert id="insertExamBank" parameterType="ExamBank" useGeneratedKeys="true" keyProperty="id">
        insert into exam_bank
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="examId != null">exam_id,</if>
            <if test="questionId != null">question_id,</if>
            <if test="questionOrder != null">question_order,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="examId != null">#{examId},</if>
            <if test="questionId != null">#{questionId},</if>
            <if test="questionOrder != null">#{questionOrder},</if>
         </trim>
    </insert>

    <update id="updateExamBank" parameterType="ExamBank">
        update exam_bank
        <trim prefix="SET" suffixOverrides=",">
            <if test="examId != null">exam_id = #{examId},</if>
            <if test="questionId != null">question_id = #{questionId},</if>
            <if test="questionOrder != null">question_order = #{questionOrder},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteExamBankById" parameterType="Long">
        delete from exam_bank where id = #{id}
    </delete>

    <delete id="deleteExamBankByIds" parameterType="String">
        delete from exam_bank where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>