<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teach.teachingsys.mapper.CourseMapper">
    
    <resultMap type="Course" id="CourseResult">
        <result property="id"    column="id"    />
        <result property="teacherId"    column="teacher_id"    />
        <result property="teacherName"    column="teacher_name"    />
        <result property="teacherAvatar"    column="teacher_avatar"    />
        <result property="courseName"    column="course_name"    />
        <result property="description"    column="description"    />
        <result property="price"    column="price"    />
        <result property="category"    column="category"    />
        <result property="coverImage"    column="cover_image"    />
        <result property="status"    column="status"    />
        <result property="level"    column="level"    />
        <result property="totalStudents"    column="total_students"    />
        <result property="averageRating"    column="average_rating"    />
        <result property="reviewCount"    column="review_count"    />
        <result property="statsUpdatedTime"    column="stats_updated_time"    />
        <result property="approvalTime"    column="approval_time"    />
        <result property="rejectionReason"    column="rejection_reason"    />
        <result property="createdTime"    column="created_time"    />
        <result property="updatedTime"    column="updated_time"    />
    </resultMap>

    <sql id="selectCourseVo">
        select id, teacher_id, teacher_name, teacher_avatar, course_name, description, price, category, cover_image, status, level, total_students, average_rating, review_count, stats_updated_time, approval_time, rejection_reason, created_time, updated_time from course
    </sql>

    <select id="selectCourseList" parameterType="Course" resultMap="CourseResult">
        <include refid="selectCourseVo"/>
        <where>  
            <if test="teacherId != null "> and teacher_id = #{teacherId}</if>
            <if test="teacherName != null  and teacherName != ''"> and teacher_name like concat('%', #{teacherName}, '%')</if>
            <if test="teacherAvatar != null  and teacherAvatar != ''"> and teacher_avatar = #{teacherAvatar}</if>
            <if test="courseName != null  and courseName != ''"> and course_name like concat('%', #{courseName}, '%')</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="price != null "> and price = #{price}</if>
            <if test="category != null  and category != ''"> and category = #{category}</if>
            <if test="coverImage != null  and coverImage != ''"> and cover_image = #{coverImage}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="level != null  and level != ''"> and level = #{level}</if>
            <if test="totalStudents != null "> and total_students = #{totalStudents}</if>
            <if test="averageRating != null "> and average_rating = #{averageRating}</if>
            <if test="reviewCount != null "> and review_count = #{reviewCount}</if>
            <if test="statsUpdatedTime != null "> and stats_updated_time = #{statsUpdatedTime}</if>
            <if test="approvalTime != null "> and approval_time = #{approvalTime}</if>
            <if test="rejectionReason != null  and rejectionReason != ''"> and rejection_reason = #{rejectionReason}</if>
            <if test="createdTime != null "> and created_time = #{createdTime}</if>
            <if test="updatedTime != null "> and updated_time = #{updatedTime}</if>
        </where>
    </select>
    
    <select id="selectCourseById" parameterType="Long" resultMap="CourseResult">
        <include refid="selectCourseVo"/>
        where id = #{id}
    </select>

    <insert id="insertCourse" parameterType="Course" useGeneratedKeys="true" keyProperty="id">
        insert into course
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="teacherId != null">teacher_id,</if>
            <if test="teacherName != null">teacher_name,</if>
            <if test="teacherAvatar != null">teacher_avatar,</if>
            <if test="courseName != null and courseName != ''">course_name,</if>
            <if test="description != null">description,</if>
            <if test="price != null">price,</if>
            <if test="category != null">category,</if>
            <if test="coverImage != null">cover_image,</if>
            <if test="status != null">status,</if>
            <if test="level != null">level,</if>
            <if test="totalStudents != null">total_students,</if>
            <if test="averageRating != null">average_rating,</if>
            <if test="reviewCount != null">review_count,</if>
            <if test="statsUpdatedTime != null">stats_updated_time,</if>
            <if test="approvalTime != null">approval_time,</if>
            <if test="rejectionReason != null">rejection_reason,</if>
            <if test="createdTime != null">created_time,</if>
            <if test="updatedTime != null">updated_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="teacherId != null">#{teacherId},</if>
            <if test="teacherName != null">#{teacherName},</if>
            <if test="teacherAvatar != null">#{teacherAvatar},</if>
            <if test="courseName != null and courseName != ''">#{courseName},</if>
            <if test="description != null">#{description},</if>
            <if test="price != null">#{price},</if>
            <if test="category != null">#{category},</if>
            <if test="coverImage != null">#{coverImage},</if>
            <if test="status != null">#{status},</if>
            <if test="level != null">#{level},</if>
            <if test="totalStudents != null">#{totalStudents},</if>
            <if test="averageRating != null">#{averageRating},</if>
            <if test="reviewCount != null">#{reviewCount},</if>
            <if test="statsUpdatedTime != null">#{statsUpdatedTime},</if>
            <if test="approvalTime != null">#{approvalTime},</if>
            <if test="rejectionReason != null">#{rejectionReason},</if>
            <if test="createdTime != null">#{createdTime},</if>
            <if test="updatedTime != null">#{updatedTime},</if>
         </trim>
    </insert>

    <update id="updateCourse" parameterType="Course">
        update course
        <trim prefix="SET" suffixOverrides=",">
            <if test="teacherId != null">teacher_id = #{teacherId},</if>
            <if test="teacherName != null">teacher_name = #{teacherName},</if>
            <if test="teacherAvatar != null">teacher_avatar = #{teacherAvatar},</if>
            <if test="courseName != null and courseName != ''">course_name = #{courseName},</if>
            <if test="description != null">description = #{description},</if>
            <if test="price != null">price = #{price},</if>
            <if test="category != null">category = #{category},</if>
            <if test="coverImage != null">cover_image = #{coverImage},</if>
            <if test="status != null">status = #{status},</if>
            <if test="level != null">level = #{level},</if>
            <if test="totalStudents != null">total_students = #{totalStudents},</if>
            <if test="averageRating != null">average_rating = #{averageRating},</if>
            <if test="reviewCount != null">review_count = #{reviewCount},</if>
            <if test="statsUpdatedTime != null">stats_updated_time = #{statsUpdatedTime},</if>
            <if test="approvalTime != null">approval_time = #{approvalTime},</if>
            <if test="rejectionReason != null">rejection_reason = #{rejectionReason},</if>
            <if test="createdTime != null">created_time = #{createdTime},</if>
            <if test="updatedTime != null">updated_time = #{updatedTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCourseById" parameterType="Long">
        delete from course where id = #{id}
    </delete>

    <delete id="deleteCourseByIds" parameterType="String">
        delete from course where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>